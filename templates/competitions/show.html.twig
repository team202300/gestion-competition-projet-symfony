{% extends 'basedash.html.twig' %}
{% block body %}
{% block title %}Competition Details{% endblock %}

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">

    <style>
        /* Custom button styles */
        .btn {
            padding: 10px 20px;
            font-weight: 600;
            font-size: 14px;
            border-radius: 5px;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
            border: none;
        }

        /* Back to list button */
        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .btn-secondary i {
            margin-right: 5px;
        }

        /* Edit button */
        .btn-warning {
            background-color: #ffc107;
            color: #212529;
        }

        .btn-warning:hover {
            background-color: #e0a800;
        }

        .btn-warning i {
            margin-right: 5px;
        }

        /* Delete button */
        .btn-danger {
            background-color: #dc3545;
            color: #fff;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-danger i {
            margin-right: 5px;
        }

        /* Hover effect on buttons */
        .btn:hover {
            transform: translateY(-2px);
        }

        .btn:active {
            transform: translateY(1px);
        }
    </style>
    <div class="container">
        <h1>Competition Details</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ competition.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ competition.name }}</td>
                </tr>
                <tr>
                    <th>DateC</th>
                    <td>{{ competition.dateC ? competition.dateC|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ competition.type }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_competitions_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to list
        </a>

        <a href="{{ path('app_competitions_edit', {'id': competition.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>

        <a href="{{ path('app_competitions_delete', {'id': competition.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this competition?');">
            <i class="fas fa-trash"></i> Delete
        </a>
    </div>
{% endblock %}